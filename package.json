{
  "name": "file-hasher-plugin",
  "version": "0.1.0",
  "description": "文件哈希计算器 Sidecar 插件",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "build:rust": "cargo build",
    "build:rust:release": "cargo build --release",
    "build:vue": "vite build",
    "build:all": "node build.js --all --release",
    "package": "node build.js --release --package",
    "dev": "cargo build && cargo run",
    "clean": "cargo clean && rimraf dist dist-ui"
  },
  "keywords": [
    "aio-hub",
    "plugin",
    "sidecar",
    "file-hasher"
  ],
  "author": "AIO Hub Team",
  "license": "MIT",
  "devDependencies": {
    "archiver": "^7.0.1",
    "vite": "^5.0.0",
    "@vitejs/plugin-vue": "^5.0.0"
  }
}